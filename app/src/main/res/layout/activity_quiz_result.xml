<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFDE7"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.mathquiz.QuizResult">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/paper_notebook" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                android:background="#FFB74D"
                android:gravity="center_horizontal"
                android:text="Quiz Results"
                android:textAllCaps="true"
                android:textColor="#E65100"
                android:textSize="36sp"
                android:textStyle="bold|italic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Player 1 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/PlayerTextStyle"
                        android:background="#B2EBF2"
                        android:text="Player 1"
                        android:textColor="#1A237E" />

                    <TextView
                        android:id="@+id/player1_show_name_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="5dp"
                        android:text="Name"
                        android:textColor="#3949AB"
                        android:textSize="25sp" />

                    <TextView
                        style="@style/HeaderTextStyle"
                        android:text="Sum" />

                    <TextView
                        android:id="@+id/player1_sum_result_textview"
                        style="@style/ResultsTextStyle" />

                    <TextView
                        style="@style/HeaderTextStyle"
                        android:text="Subtraction" />

                    <TextView
                        android:id="@+id/player1_subt_result_textview"
                        style="@style/ResultsTextStyle" />

                    <TextView
                        style="@style/HeaderTextStyle"
                        android:text="Multiplication" />

                    <TextView
                        android:id="@+id/player1_mult_result_textview"
                        style="@style/ResultsTextStyle" />

                    <TextView
                        style="@style/HeaderTextStyle"
                        android:text="Division" />

                    <TextView
                        android:id="@+id/player1_div_result_textview"
                        style="@style/ResultsTextStyle" />

                    <TextView
                        android:id="@+id/player1_points_textview"
                        style="@style/ResultsTextStyle"
                        android:layout_marginTop="16dp"
                        android:textColor="#1565C0"
                        android:textStyle="bold" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="8dp"
                    android:background="#F57C00" />

                <!-- Player 2 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/PlayerTextStyle"
                        android:background="#FFCDD2"
                        android:text="Player 2"
                        android:textColor="#D50000" />

                    <TextView
                        android:id="@+id/player2_show_name_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="5dp"
                        android:text="Name"
                        android:textColor="#C62828"
                        android:textSize="25sp" />

                    <TextView
                        style="@style/HeaderTextStyle"
                        android:text="Sum" />

                    <TextView
                        android:id="@+id/player2_sum_result_textview"
                        style="@style/ResultsTextStyle" />

                    <TextView
                        style="@style/HeaderTextStyle"
                        android:text="Subtraction" />

                    <TextView
                        android:id="@+id/player2_subt_result_textview"
                        style="@style/ResultsTextStyle" />

                    <TextView
                        style="@style/HeaderTextStyle"
                        android:text="Multiplication" />

                    <TextView
                        android:id="@+id/player2_mult_result_textview"
                        style="@style/ResultsTextStyle" />

                    <TextView
                        style="@style/HeaderTextStyle"
                        android:text="Division" />

                    <TextView
                        android:id="@+id/player2_div_result_textview"
                        style="@style/ResultsTextStyle" />

                    <TextView
                        android:id="@+id/player2_points_textview"
                        style="@style/ResultsTextStyle"
                        android:layout_marginTop="16dp"
                        android:textColor="#F44336"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/trophy_winner" />

                <TextView
                    android:id="@+id/winner_textview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:textColor="#FFAB00"
                    android:textSize="30sp" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/trophy_winner" />

            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:background="#FFAB00"
                android:onClick="restartQuiz"
                android:text="Restart"
                android:textStyle="bold"
                android:textColor="#E65100"/>

        </LinearLayout>

    </RelativeLayout>
</ScrollView>